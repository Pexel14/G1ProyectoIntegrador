<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="4dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado con el tÃ­tulo y el check -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/tvCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/circulo" />


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/akaya_telivigala"
                android:text="@string/list_experiencias_titulo_ejemplo"
                android:textColor="@color/black"
                android:textSize="@dimen/tam_texto_pequenio"
                android:textStyle="bold"
                android:layout_marginStart="8dp" /> <!-- Margen para separarlo del check -->

        </LinearLayout>

        <ImageView
            android:id="@+id/imgExperiencia"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/experiencia" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/akaya_telivigala"
            android:text="@string/list_experiencias_descripcion_ejemplo"
            android:textColor="@color/black"
            android:textSize="@dimen/tam_texto_pequenio" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/tvMapLink"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_tarjeta_inicio"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_principal"
                android:layout_gravity="end" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>