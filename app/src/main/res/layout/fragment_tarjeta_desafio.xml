<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"
    app:contentPaddingTop="16dp"
    app:contentPaddingBottom="16dp"
    app:contentPaddingLeft="16dp"
    app:contentPaddingRight="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvEtiquetas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de etiquetas"
            android:gravity="end"
            android:maxLines="1"
            android:ellipsize="end" /> <!-- Añade puntos suspensivos si el texto es demasiado largo -->


        <!-- Borde superior azul -->
        <View
            android:id="@+id/vColor"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="5dp"
            android:background="#2196F3"
            android:layout_below="@id/tvEtiquetas"/>

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vColor"
            android:layout_marginTop="16dp"
            android:text="Título del desafío"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitulo"
            android:layout_marginTop="8dp"
            android:text="Descripción del desafío Descripción del desafío Descripción del desafío Descripción del desafío "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescripcion"
            android:layout_marginTop="8dp"
            android:text="Ubicación"
            android:textSize="14sp"
            android:textStyle="italic" />

        <!-- TextView de etiquetas -->

    </RelativeLayout>
</androidx.cardview.widget.CardView>