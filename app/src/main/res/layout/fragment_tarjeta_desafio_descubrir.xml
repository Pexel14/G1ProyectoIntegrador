<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp"
    android:layout_marginHorizontal="25dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <View
            android:id="@+id/vColorTarjetaDescubrir"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@color/blue"/>

        <TextView
            android:id="@+id/tvTituloTarjetaDescubrir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Título del desafío"
            android:layout_below="@id/vColorTarjetaDescubrir"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <ImageView
            android:id="@+id/imgUbiDecoracion"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_ubicacion_decoracion_tarjeta"
            android:layout_marginStart="16dp"
            android:layout_alignBottom="@+id/tvUbicacionTarjetaDescubrir"/>

        <TextView
            android:id="@+id/tvUbicacionTarjetaDescubrir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imgUbiDecoracion"
            android:layout_alignBottom="@+id/imgTarjetaDesafio"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="2dp"
            android:text="Ubicación"
            android:textColor="@color/texto_desapercibido"
            android:textSize="14sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imgTarjetaDesafio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tvTituloTarjetaDescubrir"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/img_tarjeta_inicio" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>