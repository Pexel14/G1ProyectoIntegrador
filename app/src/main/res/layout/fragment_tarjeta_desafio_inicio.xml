<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <View
            android:id="@+id/vColorTarjetaInicio"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#2196F3"/>

        <TextView
            android:id="@+id/tvEtiquetasTarjetaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de etiquetas"
            android:layout_alignBottom="@id/tvTituloTarjetaInicio"
            android:layout_toEndOf="@+id/tvTituloTarjetaInicio"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"/> <!-- Añade puntos suspensivos si el texto es demasiado largo -->

        <TextView
            android:id="@+id/tvTituloTarjetaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Título del desafío"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/tvDescripcionTarjetaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vColorTarjetaInicio"
            android:layout_marginTop="8dp"
            android:text="Descripción del desafío Descripción del desafío Descripción del desafío Descripción del desafío "
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvUbicacionTarjetaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescripcionTarjetaInicio"
            android:layout_marginTop="8dp"
            android:text="Ubicación"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="#CACACA"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>