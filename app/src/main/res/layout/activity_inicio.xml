<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    tools:context=".Inicio">

    <!-- Barra superior -->
    <RelativeLayout
        android:id="@+id/rlBarraSuperior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp">

        <View
            android:id="@+id/vCajaSuperior"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvDesafios"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Desafíos"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Barra de búsqueda -->
    <View
        android:id="@+id/vCajaBusqueda"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rlBarraSuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAniadirDesafio"
        android:background="@drawable/rounded_corner_box" />

    <EditText
        android:id="@+id/etBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/vCajaBusqueda"
        app:layout_constraintBottom_toBottomOf="@id/vCajaBusqueda"
        app:layout_constraintStart_toStartOf="@id/vCajaBusqueda"
        app:layout_constraintEnd_toStartOf="@id/btnBuscar"
        android:hint="Buscar"
        android:background="@null"
        android:inputType="text|textNoSuggestions"
        android:textSize="20sp"/>

   <Button
       android:id="@+id/btnBuscar"
       android:layout_width="65dp"
       android:layout_height="65dp"
       app:layout_constraintTop_toTopOf="@+id/vCajaBusqueda"
       app:layout_constraintBottom_toBottomOf="@id/vCajaBusqueda"
       app:layout_constraintEnd_toEndOf="@id/vCajaBusqueda"
       android:layout_marginRight="15dp"
       android:background="@drawable/rounded_corner_box"/>

    <!-- Añadir desafío -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btnAniadirDesafio"
        app:layout_constraintBottom_toBottomOf="@id/btnAniadirDesafio"
        app:layout_constraintStart_toStartOf="@id/btnAniadirDesafio"
        app:layout_constraintEnd_toEndOf="@id/btnAniadirDesafio"
        android:text="+"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:elevation="1dp"/>

    <Button
        android:id="@+id/btnAniadirDesafio"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="@+id/vCajaBusqueda"
        app:layout_constraintBottom_toBottomOf="@id/vCajaBusqueda"
        app:layout_constraintStart_toEndOf="@+id/vCajaBusqueda"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_corner_button"
        android:gravity="center"
        android:textAlignment="center"/>

    <!-- ¿Debería de ser un ScrollView? -->
    <LinearLayout
        android:id="@+id/contenedorFragmentsInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/rlBarraSuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>